<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>
        <server>
            <id>mvn.repo</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>mvn.repo</id>
            <properties>
                <altReleaseDeploymentRepository>mvn.repo::${env.MAVEN_REPO_ADDRESS}</altReleaseDeploymentRepository>
                <altSnapshotDeploymentRepository>mvn.repo::${env.MAVEN_REPO_ADDRESS}</altSnapshotDeploymentRepository>
            </properties>
        </profile>
    </profiles>

    <mirrors>
        <mirror>
            <id>mvn.repo</id>
            <name>maven remote repository</name>
            <url>${env.MAVEN_REPO_ADDRESS}</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <activeProfiles>
        <activeProfile>mvn.repo</activeProfile>
    </activeProfiles>

</settings>
